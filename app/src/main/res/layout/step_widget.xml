<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_step_widget_holder"
    android:layout_width="180dp"
    android:layout_height="110dp"
    android:background="#2C7CBD"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/img_step_cake_resource"
        android:layout_width="@dimen/box_big"
        android:layout_height="@dimen/box_big"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_medium"
        android:alpha="0.5"
        android:contentDescription="@string/step_widget_preview"
        tools:src="@drawable/cheesecake" />

    <TextView
        android:id="@+id/step_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/appwidget_text"
        android:textColor="@color/textPrimary"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:text="Yellow Cake (step 5)" />

</RelativeLayout>